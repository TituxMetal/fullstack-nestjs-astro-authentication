{
  "name": "@auth-system/frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Astro frontend with React integration for authentication system",
  "type": "module",
  "scripts": {
    "build": "astro build",
    "dev": "astro dev",
    "start": "astro preview",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules coverage dist .astro .turbo"
  },
  "dependencies": {
    "@astrojs/node": "^9.2.2",
    "@astrojs/react": "^4.3.0",
    "astro": "^5.8.0",
    "astro-icon": "^1.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@auth-system/eslint-config": "workspace:*",
    "@auth-system/ts-config": "workspace:*",
    "@auth-system/types": "workspace:*",
    "@tailwindcss/vite": "^4.1.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.5.0",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.7",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
}
