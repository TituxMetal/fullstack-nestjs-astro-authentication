{
  "extends": "@auth-system/ts-config",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "~ui/*": ["src/components/ui/*"],
      "@auth-system/types": ["../../packages/shared-types/src"],
      "@auth-system/types/*": ["../../packages/shared-types/src/*"]
    }
  },
  "include": ["src/**/*", "*.ts", "*.tsx", "**/*.astro", "**/*.d.ts"],
  "exclude": ["node_modules", "dist", "coverage", ".turbo", ".astro"]
}
